{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample Api",
    "version": "0.1.0"
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "create a user",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string",
                    "example": "foo"
                  },
                  "lastName": {
                    "type": "string",
                    "example": "bar"
                  }
                },
                "required": [
                  "firstName",
                  "lastName"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "-",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "firstName": {
                      "type": "string",
                      "example": "foo"
                    },
                    "lastName": {
                      "type": "string",
                      "example": "bar"
                    },
                    "role": {
                      "type": "string",
                      "example": "user"
                    }
                  },
                  "required": [
                    "firstName",
                    "lastName",
                    "role"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}